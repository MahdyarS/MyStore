    <!-- main js---------------------------------------------------->
    @*
        <script src="~/SiteTemp/assets/js/main.js"></script>*@
    <script src="~/Admin/Sweetalert2/sweetalert2.min.js"></script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


    <script>

        document.getElementById('reg').addEventListener('click', register);


        function register() {

            var email = $('#email').val();
            var password = $('#password').val();
            var RepeatPassword = $('#RepeatPassword').val();
            var phone = $('#phone').val();
            var fname = $('#fname').val();
            var lname = $('#lname').val();


            if (password != RepeatPassword) {
                swal.fire({
                    title: "خطا!",
                    text: "رمز و تکرار آن برابر نیست",
                    icon: "warning",
                    confirmButtonColor: '#d33',
                    confirmButtonText: 'باشه',

                }).then((result) => { return 0; })

            }
            else {

                var postData = {
                    'email': email,
                    'password': password,
                    'ConfirmPassword': RepeatPassword,
                    'firstname' : fname,
                    'lastName' : lname,
                    'phoneNumber' : phone,
                }

                $.ajax({
                    contetType: "application/x-www-form-urlencoded",
                    dataType: 'json',
                    type: "POST",
                    url: "Register",
                    data: postData,
                    success: data => {
                        if (data.succeeded) {
                            swal.fire({
                                title: "موفق!",
                                text: 'ثبت نام با موفقیت انجام شد',
                                icon: "success",
                                confirmButtonColor: '#3085d6',
                                confirmButtonText: "باشه"
                            }).then(p => location.replace("/"));

                        } else {
                            swal.fire({
                                title: "ناموفق!",
                                text: data.message,
                                icon: "warning",
                                confirmButtonColor: '#d33',
                                confirmButtonText: "باشه"
                            }).then(p => location.reload());

                        }
                    }
                });

            }

        }


    </script>

</body>


















</html>